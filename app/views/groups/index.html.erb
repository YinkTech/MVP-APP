<h1 class="text-info">Groups List</h1>

<div id="groups">
  <% @groups.each do |group| %>
      <% if group.user == current_user %>
          <div class="card mb-3">
            <div class="card-body row">
            <b class=" fs-2 col-6 text-capitalize">  <%= link_to group.company_name, group %> </b>
            <b class=" fs-2 col-6 text-end">  <%= link_to group.amount %> </b>
             <i class="text-center d-block "> created at: <%= group.created_at %> </i>
            </div>
          </div>
      <% end %>
  <% end %>
</div>

<%= link_to "New group", new_group_path, class:"btn btn-info my-3" %>
